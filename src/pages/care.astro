    <script>
        const images = document.querySelectorAll(".image");
        const totalSlides = images.length;
        let currentSlideIndex = 0;

        const prev = document.querySelector("#carousel-prev");
        const next = document.querySelector("#carousel-next");

        function nextImg() {
            if (currentSlideIndex < totalSlides - 1) {
                images[currentSlideIndex].classList.add("hidden");
                currentSlideIndex++;
                images[currentSlideIndex].classList.remove("hidden");
            }
        }
        function prevImg() {
            if (currentSlideIndex > 0) {
                images[currentSlideIndex].classList.add("hidden");
                currentSlideIndex--;
                images[currentSlideIndex].classList.remove("hidden");
            }
        }

        prev.addEventListener("click", prevImg);
        next.addEventListener("click", nextImg);

        // Seleccionar todas las imágenes de la galería
        const imagenes: NodeListOf<HTMLImageElement> =
            document.querySelectorAll(".gallery .imagen");
        // Seleccionar el overlay, la imagen del overlay y el botón de cierre
        const overlay: HTMLElement = document.getElementById("overlay")!;
        const overlayImg: HTMLImageElement = document.getElementById(
            "overlay-img",
        ) as HTMLImageElement;
        const cerrarModalBtn: HTMLButtonElement = document.getElementById(
            "cerrarModalBtn",
        ) as HTMLButtonElement;

        // Agregar evento de clic a cada imagen de la galería
        imagenes.forEach((img) => {
            img.addEventListener("click", () => {
                overlay.style.display = "flex"; // Mostrar el overlay
                overlayImg.src = img.src; // Establecer la imagen del overlay
                document.body.style.overflow = "hidden"; // Bloquear el scroll
            });
        });

        // Agregar evento de clic al overlay para cerrar si se hace clic fuera de la imagen
        overlay.addEventListener("click", (e: MouseEvent) => {
            if (e.target === overlay) {
                // Solo cerrar si se hace clic en el overlay (fondo)
                overlay.style.display = "none"; // Ocultar el overlay
                document.body.style.overflow = ""; // Restaurar el scroll
            }
        });

        // Agregar evento de clic al botón de cierre
        cerrarModalBtn.addEventListener("click", () => {
            overlay.style.display = "none"; // Ocultar el overlay
            document.body.style.overflow = ""; // Restaurar el scroll
        });
    </script>
